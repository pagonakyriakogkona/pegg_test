package Chess;

public class App {
    public static final int ROWS=8;
    public static final int COLS=8;
    public static final int PREFIX_LENGTH = 4;
    public static final String PREFIX = " ".repeat(PREFIX_LENGTH);
    

    public static void main(String[] args) {
        System.out.print(PREFIX);
        for(int col = 65; col < (65+COLS) ; col ++) {
            char aChar = (char) col;
            System.out.print(" " + aChar);
        }
        System.out.println();
        System.out.println(PREFIX +" _".repeat(COLS));
        for(int row= 1; row <=ROWS ;row++) {
            System.out.print((row + PREFIX) .substring(0, PREFIX_LENGTH));
            for(int col = 1; col <=COLS ; col ++) {
                System.out.print( "!_");
            }
            System.out.println("!");
        }
    }
}
