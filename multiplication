package Multiplication;

import javax.sound.midi.Soundbank;

public class App {
   public static final int ROWS=10;
   public static final int COLS=10;
   public static final int NUM_UNDERSCORE=COLS * 4;
   public static final int PREFIX_LENGTH = 8;

    

    public static void main(String[] args) {
        String rowHeader = " ".repeat(PREFIX_LENGTH);
        String header = "";
        for(int col = 1; col<=COLS ; col ++) {
            header+=col;
            header+="\t";
        }
        System.out.print(rowHeader);
        System.out.println(header);
        System.out.print(rowHeader);
        System.out.println("_" .repeat(NUM_UNDERSCORE));
        for(int row = 1; row <=ROWS ; row++) {
            System.out.print((row +rowHeader). substring ( 0,  PREFIX_LENGTH));
            for(int col = 1; col <=COLS; col ++) {
                int result = row * col;
                System.out.print(result);
                System.out.println("\t");
            }
            System.out.println();
    
        }

    }
}
